n=int(input())
m=(n//2)
i=1
while i<= m+1:
    spaces=1
    while spaces <= m+1-i:
        print(' ',end='')
        spaces=spaces+1
    j=1
    while j<=((2*i)-1):
        print('*',end='')
        j=j+1
    print()
    i=i+1
    
p=n-m-1
i=1
while i<=p:
    spaces=1
    while spaces<=i:
        print(' ',end='')
        spaces=spaces+1
    j=1
    while j<=((2*(p-i))+1):
        print('*',end='')
        j=j+1
    print()
    i=i+1
